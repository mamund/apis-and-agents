{
  "sharedStateURL": "http://localhost:4500/state/628bd965-fc5e-43cf-8e8d-bea39154d0fd",
  "name": "test-todo-service",
  "description" : "A short script to exercise the TODO service",
  "steps": [
    {
      "name": "delete-todo",
      "description" : "to start w/ a clean slate, delete anything from the last run",
      "enabled": true,
      "tasks": [
        {
          "enabled" : false,
          "tag": "uppercase",
          "description" : "run a quick check on the uppercase service",
          "input": {
            "input": {"$fromState" : "message"}
          },
          "storeResultAt": [
            {
              "targetPath": "/results/full"
            }
          ]
        },
        {
          "tag": "todo",
          "serviceName" : "todo-service",
          "enabled" : true,
          "input": {
            "command": "delete",
            "resource": "todo",
            "id": "job-test-001"
          },
          "storeResultAt": [
            {
              "targetPath": "/state/todoDelete"
            }
          ]
        }
      ]
    },
    {
      "name": "create-todo",
      "enabled": true,
      "tasks": [
        {
          "tag": "todo",          
          "serviceName": "todo-service",
          "input": {
            "command": "create",
            "resource": "todo",
            "id": "job-test-001",
            "payload": {
              "title": "From Job-Control",
              "done": false
            }
          },
          "storeResultAt": [
            {
              "targetPath": "/state/todoCreated"
            }
          ]
        }
      ]
    },
    {
      "name": "update-todo",
      "enabled": true,
      "tasks": [
        {
          "tag": "todo",
          "serviceName": "todo-service",
          "input": {
            "command": "update",
            "resource": "todo",
            "id": "job-test-001",
            "payload": {
              "done": true
            }
          },
          "storeResultAt": [
            {
              "targetPath": "/state/todoUpdated"
            }
          ]
        }
      ]
    },
    {
      "name": "read-todo",
      "enabled": true,
      "tasks": [
        {
          "tag": "todo",
          "serviceName": "todo-service",
          "input": {
            "command": "read",
            "resource": "todo",
            "id": "job-test-001"
          },
          "storeResultAt": [
            {
              "targetPath": "/state/todoRead"
            }
          ]
        }
      ]
    },
    {
      "name": "todo-revert",
      "enabled": true,
      "mode": "revert",
      "tasks": [
        {
         "tag": "todo",
         "serviceName": "todo-service",
          "input": {
            "command": "create",
            "resource": "todo",
            "id": "job-test-001"
          },
          "storeResultAt": [
            {
              "targetPath": "/state/todoRevert"
            }
          ]
        }
      ]
    }
  ]
}
